<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackground"
    android:gravity="center"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/lavender_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_person"/>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:id="@+id/signUpRollNo"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"
                    android:hint="Roll No."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_email"/>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:id="@+id/signUpEmail"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"
                    android:hint="Email"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_lock"/>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:id="@+id/signUpPassword"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"
                    android:inputType="textPassword"
                    android:hint="Password"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/lavender_border"
                android:layout_marginTop="40dp"
                android:padding="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:src="@drawable/ic_password"/>


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:id="@+id/signUpConfirmPassword"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"
                    android:inputType="textPassword"
                    android:hint="Confirm Password"/>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/studentRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:background="@drawable/radio_checked"
                        android:textColor="@drawable/text_color"
                        android:elevation="6dp"
                        android:layout_weight="0.3"
                        android:textAlignment="center"
                        android:layout_margin="8dp"
                        android:text="Student"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/facultyRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textColor="@drawable/text_color"
                        android:textAlignment="center"
                        android:elevation="6dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/radio_checked"
                        android:layout_weight="0.3"
                        android:text="Faculty"
                        />

                    <RadioButton
                        android:id="@+id/deoRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textAlignment="center"
                        android:elevation="6dp"
                        android:textColor="@drawable/text_color"
                        android:layout_margin="8dp"
                        android:background="@drawable/radio_checked"
                        android:layout_weight="0.3"
                        android:text="DEO"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hodRadioButton"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textAlignment="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/radio_checked"
                        android:textColor="@drawable/text_color"
                        android:elevation="6dp"
                        android:text="HOD"/>

                    <RadioButton
                        android:id="@+id/superAdminRadioButton"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:button="@color/transparent"
                        android:textAlignment="center"
                        android:layout_margin="8dp"
                        android:background="@drawable/radio_checked"
                        android:textColor="@drawable/text_color"
                        android:elevation="6dp"
                        android:text="Super Admin"/>
                </LinearLayout>

            </RadioGroup>
            
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sign Up"
                android:id="@+id/signUp"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                app:cornerRadius="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginRedirect"
                android:text="Already a user? Login"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@color/lavender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Admin"
                android:text="Admin"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColor="@color/lavender"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>